{
  "$schema": "https://raw.githubusercontent.com/microsoft/microsoft-bonsai-api/main/Reference/siminterface.schema.json",
  "name": "blackjack-sim",
  "timeout": 60,
  "description": {
    "action": {
      "category": "Struct",
      "fields": [
        {
          "name": "command",
          "type": {
            "category": "Number",
            "namedValues": [
              {
                "name": "Stay",
                "value": 0
              },
              {
                "name": "Hit",
                "value": 1
              },
              {
                "name": "Double-down",
                "value": 2
              }
            ],
            "comment": "The available actions for the agent."
          }
        }
      ]
    },
    "state": {
      "category": "Struct",
      "fields": [
        {
          "name": "player",
          "type": {
            "category": "Number",
            "comment": "Value of player's hand."
          }
        },
        {
          "name": "dealer",
          "type": {
            "category": "Number",
            "comment": "Value of dealer's hand."
          }
        },
        {
          "name": "result",
          "type": {
            "category": "Number",
            "namedValues": [
              {
                "name": "Play",
                "value": -1
              },
              {
                "name": "Lost",
                "value": 0
              },
              {
                "name": "Draw",
                "value": 1
              },
              {
                "name": "Won",
                "value": 2
              }
            ],
            "comment": "The final result of the game."
          }
        },
        {
          "name": "double",
          "type": {
            "category": "Number",
            "values": [0, 1],
            "comment": "Whether player doubled."
          }
        },
        {
          "name": "player_ace",
          "type": {
            "category": "Number",
            "values": [0, 1],
            "comment": "Whether player has aces."
          }
        },
        {
          "name": "dealer_ace",
          "type": {
            "category": "Number",
            "values": [0, 1],
            "comment": "Whether dealer has aces."
          }
        }
      ]
    }
  }
}
