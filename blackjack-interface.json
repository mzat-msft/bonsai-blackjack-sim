{
  "$schema": "https://raw.githubusercontent.com/microsoft/microsoft-bonsai-api/main/Reference/siminterface.schema.json",
  "name": "blackjack-sim",
  "timeout": 60,
  "description": {
    "action": {
      "category": "Struct",
      "fields": [
        {
          "name": "command",
          "type": {
            "category": "Number",
            "start": 0,
            "stop": 2,
            "step": 1,
            "comment": "Whether to stay (0), hit (1) or double-down (2)."
          }
        }
      ]
    },
    "state": {
      "category": "Struct",
      "fields": [
        {
          "name": "player",
          "type": {
            "category": "Number",
            "comment": "Value of player's hand."
          }
        },
        {
          "name": "dealer",
          "type": {
            "category": "Number",
            "comment": "Value of dealer's hand."
          }
        },
        {
          "name": "result",
          "type": {
            "category": "Number",
            "start": -1,
            "stop": 2,
            "step": 1,
            "comment": "The final result of the game"
          }
        }
      ]
    }
  }
}
